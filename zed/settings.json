{
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "project_panel": { "dock": null },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },

  // Disable all AI features and enable telemetry only for diagnostics
  "agent": {
    "enabled": false,
    "button": false,
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "none",
    "copilot": false,
    "inline_completions": "none",
    "show_inline_completions": false
  },
  "chat_panel": {
    "button": "never"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": true
  }
}
