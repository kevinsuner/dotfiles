{
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "project_panel": { "dock": null },
  "soft_wrap": "bounded",
  "preferred_line_length": 120,
  "show_wrap_guides": false,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Hard"
  },

  // Disable AI autocompletion and enable telemetry only for diagnostics
  "features": {
    "edit_prediction_provider": "none",
    "inline_completions": "none",
    "show_inline_completions": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": true
  }
}
